<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Files"
        android:id="@+id/viewFilesButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/previewFrame"
        android:layout_alignEnd="@+id/previewFrame" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Dash Cam"
        android:id="@+id/launchButton"
        android:textColor="#fff10200"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/viewFilesButton"
        android:id="@+id/previewFrame"></FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_toEndOf="@+id/launchButton"
        android:layout_toStartOf="@+id/stopSave"
        android:layout_alignTop="@+id/launchButton"
        android:layout_toRightOf="@+id/launchButton"
        android:layout_toLeftOf="@+id/stopSave" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Save"
        android:id="@+id/stopSave"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/viewFilesButton"
        android:layout_toStartOf="@+id/viewFilesButton" />

    SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameraPreview"
        android:layout_above="@+id/viewFilesButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
